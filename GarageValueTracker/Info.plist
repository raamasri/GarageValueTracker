<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Information -->
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundleDisplayName</key>
	<string>Garage Value Tracker</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	
	<!-- App Description & Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.finance</string>
	<key>NSHumanReadableCopyright</key>
	<string>Copyright Â© 2025. All rights reserved.</string>
	
	<!-- Supported Platforms -->
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UIRequiresFullScreen</key>
	<false/>
	
	<!-- Minimum iOS Version -->
	<key>MinimumOSVersion</key>
	<string>18.0</string>
	
	<!-- Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
	
	<!-- Supported Device Families -->
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer> <!-- iPhone -->
		<integer>2</integer> <!-- iPad -->
	</array>
	
	<!-- Supported Interface Orientations (iPhone) -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
	
	<!-- Supported Interface Orientations (iPad) -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Scene Configuration -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
				</dict>
			</array>
		</dict>
	</dict>
	
	<!-- Launch Screen -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>AccentColor</string>
		<key>UIImageName</key>
		<string>AppIcon</string>
	</dict>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<!-- NHTSA VIN Decode API -->
			<key>vpic.nhtsa.dot.gov</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Privacy Permissions -->
	
	<!-- Camera (for VIN scanning - future feature) -->
	<key>NSCameraUsageDescription</key>
	<string>Garage Value Tracker needs camera access to scan vehicle VIN numbers for quick vehicle entry.</string>
	
	<!-- Photo Library (for receipt scanning - future feature) -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Garage Value Tracker needs photo library access to attach receipt images to cost entries.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Garage Value Tracker needs permission to save receipt photos to your photo library.</string>
	
	<!-- Location (for regional pricing - optional) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Garage Value Tracker uses your location to provide accurate regional pricing and market valuations for your area.</string>
	
	<!-- Notifications (for price alerts) -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>Garage Value Tracker sends notifications when your watchlist vehicles reach target prices or when market valuations change significantly.</string>
	
	<!-- Contacts (for sharing - future feature) -->
	<key>NSContactsUsageDescription</key>
	<string>Garage Value Tracker needs contacts access to share vehicle and deal information with your contacts.</string>
	
	<!-- Calendar (for maintenance reminders - future feature) -->
	<key>NSCalendarsUsageDescription</key>
	<string>Garage Value Tracker can add maintenance reminders to your calendar to help you track service schedules.</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
	</array>
	
	<!-- Data Storage -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>
	
	<!-- App Capabilities -->
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Status Bar -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>
	
	<!-- Keyboard -->
	<key>UIKeyboardDismissMode</key>
	<string>Interactive</string>
	
	<!-- Network -->
	<key>NSAllowsArbitraryLoadsInWebContent</key>
	<false/>
	
	<!-- URL Schemes (for deep linking - future) -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.garagevaluetracker.app</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>garagevaluetracker</string>
			</array>
		</dict>
	</array>
	
	<!-- Exported UTI (for data export - future) -->
	<key>UTExportedTypeDeclarations</key>
	<array>
		<dict>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.comma-separated-values-text</string>
			</array>
			<key>UTTypeDescription</key>
			<string>Garage Value Tracker Export</string>
			<key>UTTypeIdentifier</key>
			<string>com.garagevaluetracker.export</string>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>gvt</string>
					<string>csv</string>
				</array>
			</dict>
		</dict>
	</array>
	
	<!-- App Appearance -->
	<key>UIUserInterfaceStyle</key>
	<string>Automatic</string>
	
	<!-- iPad Multitasking -->
	<key>UISupportsDocumentBrowser</key>
	<false/>
	
	<!-- TestFlight & App Store -->
	<key>ITSEncryptionExportComplianceCode</key>
	<false/>
	
	<!-- App Store Marketing -->
	<key>SKAdNetworkItems</key>
	<array>
		<!-- Add Ad Network IDs if using ads in future -->
	</array>
	
	<!-- Associated Domains (for future web integration) -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<!-- <string>applinks:garagevaluetracker.com</string> -->
	</array>
</dict>
</plist>
